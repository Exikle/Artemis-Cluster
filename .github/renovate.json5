{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  description: "Main Renovate configuration - extends modular configs",

  // ============================================================================
  // CORE CONFIGURATION
  // ============================================================================
  extends: [
    "config:recommended",
    "docker:enableMajor",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeBranch",
    // Local extends
    "local>Exikle/Artemis-Cluster:.github/renovate/autoMerge.json5",
    "local>Exikle/Artemis-Cluster:.github/renovate/groups.json5",
    "local>Exikle/Artemis-Cluster:.github/renovate/labels.json5",
    "local>Exikle/Artemis-Cluster:.github/renovate/semanticCommits.json5",
    "local>Exikle/Artemis-Cluster:.github/renovate/customManagers.json5",
  ],

  // ============================================================================
  // DASHBOARD SETTINGS
  // ============================================================================
  dependencyDashboard: true,
  dependencyDashboardTitle: "Renovate Dashboard ðŸ¤–",
  suppressNotifications: ["prEditedNotification", "prIgnoreNotification"],

  // ============================================================================
  // SCHEDULING
  // ============================================================================
  timezone: "America/Toronto",
  schedule: ["every weekday"],
  automergeSchedule: ["every weekday"],
  rebaseWhen: "conflicted",

  // ============================================================================
  // SECURITY
  // ============================================================================
  ignorePaths: ["**/*.sops.*", "**/*.secret.*"],

  // ============================================================================
  // MANAGER CONFIGURATIONS
  // ============================================================================
  flux: {
    fileMatch: ["(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$"],
  },
  "helm-values": {
    fileMatch: ["(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$"],
  },
  helmfile: {
    fileMatch: ["(^|/)helmfile\\.ya?ml(?:\\.j2)?$"],
  },
  kubernetes: {
    fileMatch: ["(^|/)kubernetes/.+\\.ya?ml(?:\\.j2)?$"],
  },
  kustomize: {
    fileMatch: ["(^|/)kustomization\\.ya?ml(?:\\.j2)?$"],
  },
  pip_requirements: {
    fileMatch: ["(^|/)[\\w-]*requirements(-\\w+)?\\.(txt|pip)(?:\\.j2)?$"],
  },
}
