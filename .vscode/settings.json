{
  "editor.bracketPairColorization.enabled": true,
  "editor.fontFamily": "FiraCode Nerd Font",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.guides.bracketPairs": true,
  "editor.guides.bracketPairsHorizontal": true,
  "editor.guides.highlightActiveBracketPair": true,
  "editor.hover.delay": 1500,
  "editor.rulers": [100],
  "editor.stickyScroll.enabled": false,
  "explorer.autoReveal": true,
  "terminal.integrated.fontSize": 14,
  "window.zoomLevel": 0,

  "files.associations": {
    "**/*.json5": "json5",
    "*.yaml": "yaml",
    "*.yaml.j2": "jinja-yaml"
  },
  "files.trimTrailingWhitespace": true,
  "material-icon-theme.files.associations": {
    "*.gotmpl": "smarty",
    "helmfile.yaml": "helm",
    "kubeconfig": "kubernetes",
    "talosconfig": "kubernetes",
    "*.secret.sops.env": "lock",
    "*.secret.sops.yaml": "lock",
    "*.yaml.j2": "jinja",
    "*.just": "just"
  },
  "material-icon-theme.folders.associations": {
    ".archive": "archive",
    ".github/workflows": "ci",
    ".private": "archive",
    ".renovate": "robot",
    "bootstrap": "seeders",
    "bootstrap/helmfile.d": "helm",
    "database": "database",
    "dev": "development",
    "external-services": "connection",
    "flux": "pipe",
    "gaming": "console",
    "talos": "linux",
    "actions-runner-system": "github",
    "cert-manager": "guard",
    "default": "home",
    "external-secrets": "secure",
    "flux-system": "pipe",
    "kube-system": "kubernetes",
    "network": "connection",
    "observability": "event",
    "openebs-system": "base",
    "rook-ceph": "dump",
    "system-upgrade": "update",
    "templates": "template",
    "volsync-system": "aws",
    "home-automation": "home",
    "media": "video",
    "cilium": "connection",
    "coredns": "connection",
    "democratic-csi": "database",
    "configs": "config",
    "controllers": "controller",
    "external-dns": "connection",
    "flux-tools": "tools",
    "operators": "robot",
    "security": "guard",
    "kubernetes": "kubernetes",
    "k8s": "kubernetes",
    "helm": "helm",
    "helmchart": "helm",
    "helmcharts": "helm",
    "monitoring": "event",
    "networking": "connection",
    "traefik": "connection",
    "metallb-system": "connection",
    "storage": "database",
    "tools": "tools",
    "volsync": "backup"
  },
  "vs-kubernetes": {
    "vs-kubernetes.kubeconfig": "/home/exikle/.kube/config",
    "vs-kubernetes.knownKubeconfigs": ["/home/exikle/.kube/config"]
  },
  "yaml.schemaStore.enable": true,
  "yaml.schemas": {
    "kubernetes": "./kubernetes/**/*.yaml",
    "https://raw.githubusercontent.com/siderolabs/talos/main/pkg/machinery/config/schemas/config.schema.json": [
      "talos/**/*.yaml.j2",
      "talos/machineconfig.yaml.j2"
    ]
  },

  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "[yaml]": {
    "editor.defaultFormatter": "bluebrown.yamlfmt",
    "editor.formatOnSave": true
  },

  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json5]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 4
  },
  "[jinja-yaml]": {
    "editor.formatOnSave": false
  },
  "prettier.documentSelectors": ["**/*.md", "**/*.json", "**/*.js", "**/*.ts", "**/*.json5"]
}
